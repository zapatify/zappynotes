<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-3xl mx-auto px-4">
    <!-- Back to App -->
    <div class="mb-6">
      <%= link_to app_root_path, class: "flex items-center text-gray-600 hover:text-gray-900" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to App
      <% end %>
    </div>

    <!-- Account Settings Card -->
    <div class="bg-white rounded-lg shadow-md p-8 mb-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">Account Settings</h1>
      
      <%= form_with model: @user, url: account_path, method: :patch, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email_address, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email_address, disabled: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 cursor-not-allowed" %>
          <p class="mt-1 text-xs text-gray-500">Email cannot be changed</p>
        </div>

        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <%= form.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :first_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent", placeholder: "John" %>
          </div>

          <div>
            <%= form.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :last_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent", placeholder: "Doe" %>
          </div>
        </div>

        <div>
          <%= form.submit "Save Changes", class: "w-full !bg-orange-600 text-white py-3 rounded-lg font-semibold hover:!bg-orange-700 transition" %>
        </div>
      <% end %>
    </div>

    <!-- Subscription Card -->
    <div class="bg-white rounded-lg shadow-md p-8">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Subscription</h2>
      
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600">Current Plan</p>
            <p class="text-2xl font-bold text-gray-900"><%= current_user.plan.to_s.capitalize %></p>
          </div>
          <% if current_user.plan == :free %>
            <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-medium">Free</span>
          <% elsif current_user.plan == :plus %>
            <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">Plus - $1.99/mo</span>
          <% else %>
            <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-sm font-medium">Pro - $4.99/mo</span>
          <% end %>
        </div>

        <!-- Plan Limits -->
        <div class="border-t pt-4">
          <h3 class="font-medium text-gray-900 mb-2">Your Usage</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Notebooks</span>
              <span class="font-medium"><%= current_user.notebooks.count %> / <%= current_user.plan_limits[:notebooks] == Float::INFINITY ? 'âˆž' : current_user.plan_limits[:notebooks] %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Storage Used</span>
              <span class="font-medium"><%= current_user.total_storage_used_mb.round(1) %>MB / <%= current_user.plan_limits[:storage_mb] == Float::INFINITY ? 'âˆž' : current_user.plan_limits[:storage_mb] %>MB</span>
            </div>
          </div>
        </div>

        <!-- Upgrade/Downgrade Buttons -->
        <div class="border-t pt-4">
          <% if current_user.plan == :free %>
            <%= link_to "Upgrade to Plus ($1.99/mo)", "#{root_path}#pricing", class: "block w-full text-center !bg-orange-600 text-white py-3 rounded-lg font-semibold hover:!bg-orange-700 transition mb-2" %>
            <%= link_to "Upgrade to Pro ($4.99/mo)", "#{root_path}#pricing", class: "block w-full text-center !bg-purple-600 text-white py-3 rounded-lg font-semibold hover:!bg-purple-700 transition" %>
          <% elsif current_user.plan == :plus %>
            <%= link_to "Upgrade to Pro ($4.99/mo)", "#{root_path}#pricing", class: "block w-full text-center !bg-purple-600 text-white py-3 rounded-lg font-semibold hover:!bg-purple-700 transition mb-2" %>
            <p class="text-center text-sm text-gray-500 mt-4">Need to cancel? Contact support</p>
          <% else %>
            <p class="text-center text-gray-600">You're on our highest plan! ðŸŽ‰</p>
            <p class="text-center text-sm text-gray-500 mt-2">Need to cancel? Contact support</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>