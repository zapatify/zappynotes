<script>
  let currentEditType = null;
  let currentEditId = null;
  let autoSaveInterval = null;
  let editor = null;

  document.addEventListener('DOMContentLoaded', function() {
  const editorElement = document.getElementById('editor');
  if (editorElement) {
    // Initialize Toast UI Editor
    editor = new toastui.Editor({
      el: editorElement,
      height: '100%',
      initialEditType: 'wysiwyg',
      previewStyle: 'vertical',
      initialValue: <%= raw @selected_note&.content.to_json || '""' %>,
      usageStatistics: false
    });
    
    // Function to resize editor
    function resizeEditor() {
      if (editor) {
        const mainArea = document.querySelector('main.flex-1');
        const header = document.querySelector('main.flex-1 > div:first-child'); // Title header
        const headerHeight = header ? header.offsetHeight : 0;
        const availableHeight = mainArea.offsetHeight - headerHeight - 48; // 48px for padding
        editor.setHeight(`${availableHeight}px`);
      }
    }
    
    // Auto-save every 60 seconds
    autoSaveInterval = setInterval(saveNote, 60000);
    
    // Save on blur
    editor.on('blur', function() {
      saveNote();
    });
    
    // Resize on window resize
    window.addEventListener('resize', resizeEditor);
    
    // Initial resize after a short delay to ensure layout is complete
    setTimeout(resizeEditor, 200);
      }
    });
    const saveStatus = document.getElementById('save-status');
    if (saveStatus) {
      const savedAt = saveStatus.dataset.savedAt;
      if (savedAt) {
        const savedTime = new Date(savedAt);
        const timeString = savedTime.toLocaleTimeString('en-US', { 
          hour: 'numeric', 
          minute: '2-digit',
          hour12: true 
        });
        document.getElementById('save-time').textContent = timeString;
      }
    }

  document.addEventListener('turbo:before-visit', function() {
    if (autoSaveInterval) {
      clearInterval(autoSaveInterval);
    }
  });

  function toggleNotebook(notebookId) {
    const notesDiv = document.getElementById(`notes-${notebookId}`);
    if (notesDiv.style.display === 'none') {
      notesDiv.style.display = 'block';
    } else {
      notesDiv.style.display = 'none';
    }
  }

  async function submitCreateNotebook(event) {
    event.preventDefault();
    const name = document.getElementById('new-notebook-name').value;

    const response = await fetch('/notebooks', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      },
      body: JSON.stringify({ notebook: { name } })
    });

    const result = await response.json();
    
    if (response.ok) {
      window.location.reload();
    } else {
      if (result.error && result.error.includes('limit')) {
        document.getElementById('upgrade-message').textContent = result.error;
        const modal = FlowbiteInstances.getInstance('Modal', 'create-notebook-modal');
        modal.hide();
        const upgradeModal = new Modal(document.getElementById('upgrade-modal'));
        upgradeModal.show();
      } else {
        alert(result.error || 'Failed to create notebook');
      }
    }
  }

  async function createNote(notebookId) {
    const response = await fetch(`/notebooks/${notebookId}/notes`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      },
      body: JSON.stringify({ note: { title: 'Untitled Note', content: '' } })
    });

    const result = await response.json();
    
    if (response.ok) {
      window.location.href = `/app?note_id=${result.id}`;
    } else {
      if (result.error && result.error.includes('limit')) {
        document.getElementById('upgrade-message').textContent = result.error;
        const modal = new Modal(document.getElementById('upgrade-modal'));
        modal.show();
      } else {
        alert(result.error || 'Failed to create note');
      }
    }
  }

  function loadNote(noteId) {
    window.location.href = `/app?note_id=${noteId}`;
  }

  async function saveNote() {
    const noteId = <%= @selected_note&.id || 'null' %>;
    if (!noteId || !editor) return;

    const title = document.getElementById('note-title').value;
    const content = editor.getMarkdown();

    const response = await fetch(`/notes/${noteId}`, {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      },
      body: JSON.stringify({ note: { title, content } })
    });

    const result = await response.json();

    if (response.ok) {
      const savedTime = new Date(result.saved_at);
      const timeString = savedTime.toLocaleTimeString('en-US', { 
        hour: 'numeric', 
        minute: '2-digit',
        hour12: true 
      });
      document.getElementById('save-status').textContent = `Last saved: ${timeString}`;
      
      // Update the note title in the sidebar
      const noteElement = document.querySelector(`[data-note-id="${noteId}"] button`);
      if (noteElement && result.title) {
        noteElement.textContent = result.title;
      }
      
      // No need to update preview - WYSIWYG shows formatted content already
    } else {
      if (result.error && result.error.includes('storage')) {
        document.getElementById('upgrade-message').textContent = result.error;
        const modal = new Modal(document.getElementById('upgrade-modal'));
        modal.show();
      }
    }
  }

  function openRenameModal(type, id, currentName) {
    currentEditType = type;
    currentEditId = id;
    document.getElementById('rename-type-label').textContent = type.charAt(0).toUpperCase() + type.slice(1);
    document.getElementById('rename-input').value = currentName;
    
    const modal = new Modal(document.getElementById('rename-modal'));
    modal.show();
  }

  async function submitRename(event) {
    event.preventDefault();
    const newName = document.getElementById('rename-input').value;
    const url = currentEditType === 'notebook' ? `/notebooks/${currentEditId}` : `/notes/${currentEditId}`;
    const key = currentEditType === 'notebook' ? 'notebook' : 'note';
    const field = currentEditType === 'notebook' ? 'name' : 'title';

    const response = await fetch(url, {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      },
      body: JSON.stringify({ [key]: { [field]: newName } })
    });

    if (response.ok) {
      window.location.reload();
    }
  }

  function openDeleteModal(type, id, name) {
    currentEditType = type;
    currentEditId = id;
    document.getElementById('delete-item-name').textContent = name;
    
    if (type === 'notebook') {
      document.getElementById('delete-warning').textContent = 'This will also delete all notes in this notebook. This action cannot be undone.';
    } else {
      document.getElementById('delete-warning').textContent = 'This action cannot be undone.';
    }
    
    const modal = new Modal(document.getElementById('delete-modal'));
    modal.show();
  }

  async function confirmDelete() {
    const url = currentEditType === 'notebook' ? `/notebooks/${currentEditId}` : `/notes/${currentEditId}`;

    const response = await fetch(url, {
      method: 'DELETE',
      headers: {
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      }
    });

    if (response.ok) {
      if (currentEditType === 'note' && currentEditId === <%= @selected_note&.id || 'null' %>) {
        window.location.href = '/app';
      } else {
        window.location.reload();
      }
    }
  }

  function openColorModal(notebookId) {
    currentEditId = notebookId;
    const modal = new Modal(document.getElementById('color-modal'));
    modal.show();
  }

  async function changeNotebookColor(color) {
    const response = await fetch(`/notebooks/${currentEditId}/update_color`, {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      },
      body: JSON.stringify({ color })
    });

    if (response.ok) {
      window.location.reload();
    }
  }
</script>