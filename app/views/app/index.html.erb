<div class="h-screen flex bg-gray-50">
  <!-- Sidebar -->
  <aside class="w-80 bg-white border-r border-gray-200 flex flex-col">
    <!-- Header -->
    <div class="p-4 border-b border-gray-200">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center space-x-2">
          <%= link_to root_path, class: "flex items-center space-x-2" do %>
            <%= image_tag "zappynoteslogo.png", alt: "ZappyNotes", class: "h-10" %>
          <% end %>
        </div>
        
        <!-- User Dropdown -->
        <div class="relative">
          <button type="button" id="user-menu-button" data-dropdown-toggle="user-dropdown" class="text-gray-500 hover:text-gray-700">
            <svg class="w-7 h-7" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"/>
            </svg>
          </button>
          
          <!-- Dropdown Menu -->
          <div id="user-dropdown" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44">
            <ul class="py-2 text-sm text-gray-700">
              <li>
                <%= link_to "Account Settings", account_path, class: "block px-4 py-2 hover:bg-gray-100" %>
              </li>
              <li>
                <%= link_to "Sign Out", sign_out_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to sign out?" }, class: "block px-4 py-2 hover:bg-gray-100 text-red-600" %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      
      <button type="button" data-modal-target="create-notebook-modal" data-modal-toggle="create-notebook-modal" class="w-full !bg-orange-600 text-white py-2 px-4 rounded-lg font-medium hover:!bg-orange-700 transition flex items-center justify-center space-x-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <span>Create Notebook</span>
      </button>
    </div>

    <!-- Notebooks and Notes List -->
    <div class="flex-1 overflow-y-auto p-4" id="notebooks-list">
      <% @notebooks.each do |notebook| %>
        <div class="mb-0" data-notebook-id="<%= notebook.id %>">
          <div class="flex items-center justify-between group py-2 px-3 rounded-lg hover:bg-gray-50 cursor-pointer" onclick="toggleNotebook(<%= notebook.id %>)">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" style="color: <%= notebook.hex_color %>" fill="none" stroke="currentColor" viewBox="0 0 16 20">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 17V2a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H3a2 2 0 0 0-2 2Zm0 0a2 2 0 0 0 2 2h12M5 15V1m8 18v-4"></path>
              </svg>
              <span class="font-medium text-gray-900"><%= notebook.name %></span>
            </div>
            
            <button onclick="event.stopPropagation()" id="notebook-menu-<%= notebook.id %>" data-dropdown-toggle="notebook-dropdown-<%= notebook.id %>" class="opacity-0 group-hover:opacity-100 text-gray-500 hover:text-gray-700 p-1" type="button">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
              </svg>
            </button>
            
            <!-- Notebook Dropdown Menu -->
            <div id="notebook-dropdown-<%= notebook.id %>" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44">
              <ul class="py-2 text-sm text-gray-700">
                <li>
                  <button onclick="openRenameModal('notebook', <%= notebook.id %>, '<%= j(notebook.name) %>')" class="block w-full text-left px-4 py-2 hover:bg-gray-100">Rename</button>
                </li>
                <li>
                  <button onclick="openColorModal(<%= notebook.id %>)" class="block w-full text-left px-4 py-2 hover:bg-gray-100">Change Color</button>
                </li>
                <li>
                  <button onclick="openDeleteModal('notebook', <%= notebook.id %>, '<%= j(notebook.name) %>')" class="block w-full text-left px-4 py-2 hover:bg-gray-100 text-red-600">Delete</button>
                </li>
              </ul>
            </div>
          </div>

          <!-- Notes in this notebook -->
          <div id="notes-<%= notebook.id %>" class="ml-7 mt-2 space-y-1" style="display: <%= @selected_note&.notebook_id == notebook.id ? 'block' : 'none' %>">
            <button onclick="createNote(<%= notebook.id %>)" class="w-full text-left text-sm text-orange-600 hover:text-orange-700 py-1 px-2 rounded flex items-center space-x-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              <span>Create Note</span>
            </button>
            
            <% notebook.notes.each do |note| %>
              <div class="flex items-center justify-between group py-1.5 px-2 rounded hover:bg-gray-50 <%= @selected_note&.id == note.id ? 'bg-orange-50' : '' %>" data-note-id="<%= note.id %>">
                <button onclick="loadNote(<%= note.id %>)" class="flex-1 text-left text-sm text-gray-700 hover:text-gray-900 truncate">
                  <%= note.title %>
                </button>
                
                <button onclick="event.stopPropagation()" id="note-menu-<%= note.id %>" data-dropdown-toggle="note-dropdown-<%= note.id %>" class="opacity-0 group-hover:opacity-100 text-gray-500 hover:text-gray-700 p-1" type="button">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                  </svg>
                </button>
                
                <!-- Note Dropdown Menu -->
                <div id="note-dropdown-<%= note.id %>" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44">
                  <ul class="py-2 text-sm text-gray-700">
                    <li>
                      <button onclick="openRenameModal('note', <%= note.id %>, '<%= j(note.title) %>')" class="block w-full text-left px-4 py-2 hover:bg-gray-100">Rename</button>
                    </li>
                    <li>
                      <button onclick="openDeleteModal('note', <%= note.id %>, '<%= j(note.title) %>')" class="block w-full text-left px-4 py-2 hover:bg-gray-100 text-red-600">Delete</button>
                    </li>
                  </ul>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Plan Info -->
    <div class="p-4 border-t border-gray-200 bg-gray-50">
      <div class="text-xs text-gray-600">
        <div class="flex justify-between mb-1">
          <span><%= current_user.admin? ? "Admin" : current_user.plan.to_s.capitalize %> Plan</span>
          <% if current_user.plan != :pro %>
            <button onclick="window.location.href='<%= root_path %>#pricing'" class="text-orange-600 hover:text-orange-700 font-medium">Upgrade</button>
          <% end %>
        </div>
        <div class="text-xs text-gray-500">
          <%= current_user.notebooks.count %> / <%= current_user.admin? ? '∞' : (current_user.plan_limits[:notebooks] == Float::INFINITY ? '∞' : current_user.plan_limits[:notebooks]) %> notebooks •
          <%= current_user.total_storage_used_mb.round(1) %>MB / <%= current_user.admin? ? '∞' : (current_user.plan_limits[:storage_mb] == Float::INFINITY ? '∞' : current_user.plan_limits[:storage_mb]) %>MB
        </div>
      </div>
    </div>
  </aside>

  <!-- Main Editor Area -->
  <main class="flex-1 flex flex-col bg-white">
    <% if @selected_note %>
      <!-- Editor Header -->
      <div class="border-b border-gray-200 p-4">
        <input 
          type="text" 
          id="note-title" 
          value="<%= @selected_note.title %>" 
          onblur="saveNote()"
          class="w-full text-2xl font-bold border-none focus:ring-0 focus:outline-none"
          placeholder="Note title..."
        />
        <div class="text-xs text-gray-500 mt-2" id="save-status" data-saved-at="<%= @selected_note.updated_at.iso8601 %>">
          Last saved: <span id="save-time"></span>
        </div>
      </div>

      <!-- Toast UI Editor -->
      <div class="flex-1 p-6 overflow-y-auto">
        <div id="editor"></div>
      </div>

    <% else %>
      <!-- Empty State -->
      <div class="flex-1 flex items-center justify-center">
        <div class="text-center text-gray-400">
          <svg class="w-24 h-24 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <p class="text-xl font-medium mb-2">No note selected</p>
          <p class="text-sm">Select a note from the sidebar or create a new one</p>
        </div>
      </div>
    <% end %>
  </main>
</div>

